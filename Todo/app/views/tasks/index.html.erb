<%= form_with(model: @task, url: tasks_path , method: :post, local: true) do |form| %>
 <div>
 <%= form.text_field :name, placeholder: "名前" %>
 </div>
 <div>
 <%= form.text_area :memo, placeholder: "内容" %>
 </div>
 <div>
 <%= form.text_field :position, placeholder: "順番" %>
 </div>
 <div>
 <%= form.submit "POST"%>
 </div>
<% end %>

<% @tasks.each do |task| %>
  <div class="box">
    <div class="name"><%= task.name %></div>
    <div class="memo"><%= task.memo %></div>
  </div>
<% end %>